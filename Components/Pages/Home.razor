@page "/"
@rendermode InteractiveServer

<header class="hero-section">
    <div class="hero-content">
        <h1>Most anticipated festivals around the globe</h1>
        <h3><em>( there's a single exception )</em></h3>
        <br />
        <a href="@($"/festival/user-view")" class="btn btn-outline-info btn">Explore festivals</a>
    </div>
</header>

<section class="carousel-wrapper">
    <Carousel @bind-SelectedSlide="@selectedSlide" Autoplay="true" AutoplayInterval="5000">
        <CarouselSlide Name="1">
            <div class="image-container">
                <Image Source="intencity.jpg" Text="Intencity" Display="Display.Block" />
                <div class="caption">
                    <h4>Intencity</h4>
                    <p>Muzica si distractie in inima Olteniei!</p>
                </div>
            </div>
        </CarouselSlide>
        <CarouselSlide Name="2">
            <div class="image-container">
                <Image Source="antol.jpg" Text="Untold" Display="Display.Block" />
                <div class="caption">
                    <h4>Untold</h4>
                    <p>Distractie ( si imprumut bancar pentru cazare )</p>
                </div>
            </div>
        </CarouselSlide>
        <CarouselSlide Name="3">
            <div class="image-container">
                <Image Source="bp.png" Text="Beach Please" Display="Display.Block" />
                <div class="caption">
                    <h4>Beach Please</h4>
                    <p>Nu merita anul asta!!</p>
                </div>
            </div>
        </CarouselSlide>
    </Carousel>
</section>

<footer class="page-footer">
    <p>© 2025 Show Time</p>
</footer>

@code {
    private string selectedSlide = "1";
}
